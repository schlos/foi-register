# Ignore bundler config
/.bundle
/vendor/bundle

# Ignore the default SQLite database.
/db/*.sqlite3

# Ignore the config files generated by the mySociety deployment system
/config/database.yml
/config/database.yml.deployed
/config/httpd.conf
/config/httpd.conf.deployed
/config/general.yml
/config/general.yml.deployed

# Ignore Mac Finder metadata
.DS_Store

# Ignore all logfiles and tempfiles.
/log/*.log
/tmp
*~
/public/assets
/public/uploads
/public/down.html

# Ignore Xapian databases
/db/xapiandbs/*
