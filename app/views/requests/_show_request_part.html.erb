<div class="request well">
  <div class="correspondence-header">
   From: <%= r.requestor %><br>
   To: Brighton and Hove<br>
   Sent: <%= r.date_received_or_created.to_s(:short) %><br>
   Subject: <%= r.title %>
  </div>
  <hr>
  <div class="correspondence-body">
   <%= r.body %>
  </div>
  <% for attachment in @request.attachments %>
   <% if attachment.file? %>
    <%= link_to attachment.file.filename, attachment.file.url %> (<%= attachment.content_type %>, <%= attachment.size %> bytes)<br>
   <% end %>
  <% end %>

</div>
