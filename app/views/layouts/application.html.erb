<!DOCTYPE html>
<html>
<head>
  <title>FoiRegister</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if is_admin_view? %>
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand">Foi Manager</a>
          <ul class="nav">
            <li><%= link_to "Manage requests", "/admin/requests/" %></li>
            <li><%= link_to "Manage users", "/admin/requestors/" %></li>
          </ul>
        
          <form class="navbar-search pull-left" action="">
            <input type="text" class="search-query span2" placeholder="Search">
          </form>
        
          <ul class="nav pull-right">
            <% if controller.current_staff_member.nil? %>
              <li><%= link_to "Log in", "/sessions/new" %></li>
            <% else %>
              <li><%= link_to "Log out", "/sessions/logout" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
