<p class="meta">
  <em>From:</em> <strong><%= MySociety::Config.get("ORG_NAME") %></strong>
  <em>Date:</em> <strong><%= r.created_at.strftime("%d/%m/%Y") %></strong>
</p>

<%= simple_format r.public_part %><br>
<% for attachment in r.attachments %>
  <% if attachment.file? %>
    <%= link_to ('<i class="icon-download"></i> ' + attachment.filename).html_safe, attachment.file.url %> (<%= number_to_human_size(attachment.size, :precision => 2) %>)<br>
  <% end %>
<% end %>



<% if is_admin_view? %>
  <% if !r.private_part.nil? && !r.private_part.empty? %>
    <blockquote>
      <div class="alert alert-error private">
        <span class="label">Private part of response:</span><br>
        <em><%= simple_format r.private_part %></em>
      </div>
    </blockquote>
  <% end %>

  <%= link_to "Edit", url_for(:action => :edit, :request_id => r.request.id, :id => r.id, :controller => :responses) %>
  <%= link_to "Printable", url_for(:action => :letter, :request_id => r.request.id, :id => r.id, :controller => :responses, :format => "pdf") %>
<% end %>
